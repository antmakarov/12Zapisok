
# Pods

def import_pods
  
  use_frameworks!
  
  # Network, Storage, Mapping
  pod 'Alamofire'
  pod 'RealmSwift', '4.3.2'
  pod 'ObjectMapper', '3.5.2'
  pod 'ObjectMapperAdditions/Realm', '~> 7.0'
  
  # Image Cache
  pod 'Kingfisher'
  
  # UI
  pod 'SwiftEntryKit'
  pod 'SkyFloatingLabelTextField', '~> 3.0'
  
  # Tools
  pod 'SwiftGen'
  pod 'SwiftLint'

  # Map
  pod 'YandexMapKit'
  
end


# Target #1 - 12Zapisok

target '12Zapisok' do
    import_pods
end


# Target #2 - 12Zapisok SwiftUI

target '12Zapisok SwiftUI' do
    import_pods
end
